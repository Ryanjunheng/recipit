<h1>Login</h1>

<%= form_tag '/login' do %>

  Email: <%= text_field_tag :email, class:"form-control" %><br>

  Password: <%= password_field_tag :password, class:"form-control" %><br>

  <%= submit_tag "Submit", class:"btn btn-primary" %>

  <br><br>
  <p>OR</p>
  
  <p><%= link_to raw('<i class="fa fa-facebook-official" aria-hidden="true"></i> Sign in with Facebook'), "/auth/facebook", class:"btn btn-primary" %></p>

<% end %>