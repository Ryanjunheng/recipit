<h1>Signup!</h1>

<%= form_for @user do |form| %>

  Name: <%= form.text_field :name %><br>
  Email: <%= form.text_field :email %><br>
  Password: <%= form.password_field :password %><br>
  Password Confirmation: <%= form.password_field :password_confirmation %><br>
  <%= form.submit "Submit" %><br><br>
  <p>OR</p>
  <p><%= link_to raw('<i class="fa fa-facebook-official" aria-hidden="true"></i> Sign up with Facebook'), "/auth/facebook" %></p>

<% end %>